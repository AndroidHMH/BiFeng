<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_22"
        android:paddingTop="@dimen/dp_13">

        <ImageView
            android:id="@+id/new_task_recycler_item_img"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/new_task_recycler_item_task_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:text="绑定手机号"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/new_task_recycler_item_receive_btn"
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_27"
                android:background="@mipmap/new_task_btn_bg"
                android:gravity="center"
                android:text="风力50"
                android:textColor="@color/white_fff"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:id="@+id/new_task_recycler_item_line"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:background="@color/gray_f2" />
</LinearLayout>
