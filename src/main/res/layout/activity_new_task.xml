<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.task.activity.NewTaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">

        <ImageView
            android:id="@+id/new_task_return_btn"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_25"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp_11"
            android:text="@string/chuang_shi"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_task_record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/new_task_return_btn"
            android:layout_marginRight="@dimen/dp_14"
            android:text="@string/gong_lue"
            android:textColor="@color/blue_095a"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_37">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_158"
                android:background="@mipmap/new_my_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_26">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/now_feng_li"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/new_task_now_feng_li_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="10"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ling_xian"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:id="@+id/new_task_now_leading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ling_xian_content"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_286"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_27"
                    android:background="@mipmap/chuang_shi_info_bg"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:text="@string/feng_li_zhi"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/new_task_ji_chu_feng_li_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_18"
                            android:text="10"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>


                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:background="@color/white_fff" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:text="@string/feng_su"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/new_task_feng_su_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_18"
                            android:text="1.0"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:background="@color/white_fff" />

                    <LinearLayout
                        android:id="@+id/new_task_feng_li_ji_lu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:layout_marginRight="@dimen/dp_18"
                            android:text="@string/feng_li_ji_lu"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/new_task_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_3">
                <!--android:background="@drawable/new_task_bg_shape"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_20"
                        android:background="@mipmap/new_task_line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:text="@string/bi_zuo"
                        android:textColor="@color/black_333"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/new_task_will_do_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_5" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/show_move_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/sp_9" />

                    <ImageView
                        android:layout_width="@dimen/dp_9"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@mipmap/xia_jian_tou" />
                </LinearLayout>

            </LinearLayout>
            <!--高风力任务-->
            <LinearLayout
                android:id="@+id/new_task_gao_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/new_task_height_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_9">
                <!--android:background="@drawable/new_task_bg_shape"-->

                <LinearLayout
                    android:id="@+id/new_task_gao_head_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_20"
                        android:background="@color/red_f3240" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:text="@string/gao_feng_li"
                        android:textColor="@color/black_333"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/new_task_hight_li_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_5" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/show_height_move_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/sp_9" />

                    <ImageView
                        android:layout_width="@dimen/dp_9"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@mipmap/xia_jian_tou" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/net_work_error_layout" />
</LinearLayout>