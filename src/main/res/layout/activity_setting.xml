<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fff"
    android:orientation="vertical"
    tools:context=".ui.setting.activity.SettingActivity">

    <include layout="@layout/title_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:text="@string/my_setting"
        android:textColor="@color/black_000"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <!--个人资料-->
    <LinearLayout
        android:id="@+id/setting_user_info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_17"
            android:text="个人资料"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_weight="1"
            android:gravity="right"
            android:text="编辑资料"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_9"
            android:src="@mipmap/jin_ru" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/gray_f2" />
    <!--语言-->
    <LinearLayout
        android:id="@+id/setting_language_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_11"
            android:paddingTop="@dimen/dp_17"
            android:text="语言"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_weight="1"
            android:gravity="right"
            android:text="简体中文"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_9"
            android:src="@mipmap/jin_ru" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/gray_f2" />
    <!--版本号-->
    <LinearLayout
        android:id="@+id/setting_version_number_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_11"
            android:paddingTop="@dimen/dp_17"
            android:text="版本号"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_weight="1"
            android:gravity="right"
            android:text="V0.0.1"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_9"
            android:src="@mipmap/jin_ru" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/gray_f2" />


    <Button
        android:id="@+id/setting_login_out_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_128"
        android:background="@drawable/home_jing_pin_shape"
        android:text="@string/login_out"
        android:textColor="@color/white_fff"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <include layout="@layout/net_work_error_layout" />
</LinearLayout>