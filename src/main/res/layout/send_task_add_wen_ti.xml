    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="@dimen/dp_20"
    android:paddingTop="@dimen/dp_21">

    <TextView
        android:id="@+id/send_diao_yan_add_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_9"
        android:text="@string/diao_yan_add"
        android:textColor="@color/blue_095a"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_alignLeft="@+id/send_diao_yan_add_item_tv"
        android:layout_alignRight="@+id/send_diao_yan_add_item_tv"
        android:layout_below="@+id/send_diao_yan_add_item_tv"
