<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical"
    tools:context=".ui.setting.activity.ChangeHeadImgActivity">


    <RelativeLayout
        android:id="@+id/change_head_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/white_fff">

        <LinearLayout
            android:id="@+id/change_head_return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@mipmap/fanhui" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="@string/change_head_title"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/change_head_img_option_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/dian_dian_dian" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/change_head_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_145"
        android:layout_marginTop="@dimen/dp_81"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <include layout="@layout/net_work_error_layout" />
</LinearLayout>