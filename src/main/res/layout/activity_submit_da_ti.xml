<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/da_ti_bg"
    android:orientation="vertical"
    tools:context=".ui.submittask.activity.SubmitDaTiActivity">

    <LinearLayout
        android:id="@+id/submit_da_ti_all_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_131"
            android:background="@mipmap/da_ti_qid_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/submit_da_ti_now_qid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xie_gang"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/submit_da_ti_all_qid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/sp_25" />
        </LinearLayout>

        <com.coinwind.bifeng.view.ViewPagerSlide
            android:id="@+id/submit_da_ti_content_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/submit_da_ti_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_52"
            android:background="@mipmap/da_ti_right_bg"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_35"
            android:paddingRight="@dimen/dp_37"
            android:paddingTop="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正确答案："
                android:textColor="@color/orange_f9f0"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/submit_da_ti_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/orange_f9f0"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_da_ti_next_or_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@color/gray_de"
            android:enabled="false"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:text="@string/next_ti"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/submit_da_ti_results_layout"
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_197"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_192"
        android:background="@drawable/certification_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/submit_da_ti_results_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/submit_da_ti_through"
            android:textColor="@color/orange_f9f0"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_da_ti_gong"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/submit_da_ti_all_problem_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_da_ti_ti"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/submit_da_ti_pass_num_problem_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_da_ti_pass_num"
                android:textSize="@dimen/sp_10" />


            <TextView
                android:id="@+id/submit_da_ti_right_problem_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ti"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit_through_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:visibility="gone">

            <TextView
                android:id="@+id/submit_through_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_da_ti_through_tv"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/submit_not_through_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/submit_da_ti_not_through_tv"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/submit_da_ti_results_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/home_jing_pin_shape"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            android:text="@string/submit_da_ti_see"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <include layout="@layout/net_work_error_layout" />

</LinearLayout>