<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fff"
    android:orientation="vertical"
    tools:context=".ui.setting.activity.ChangeMessageActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/white_fff">

        <LinearLayout
            android:id="@+id/change_message_return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@mipmap/fanhui" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_message_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/clip_save"
                android:textColor="@color/black_333"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/change_message_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_9"
        android:text="@string/neek_name"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <com.coinwind.bifeng.view.ClearEditText
        android:id="@+id/change_message_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@null"
        android:paddingBottom="@dimen/dp_7"
        android:paddingTop="@dimen/dp_7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@color/gray_f2" />

    <include layout="@layout/net_work_error_layout" />
</LinearLayout>