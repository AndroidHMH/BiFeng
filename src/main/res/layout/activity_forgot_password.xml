<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fff"
    android:orientation="vertical"
    tools:context=".ui.login.activity.ForgotPasswordActivity">

    <include layout="@layout/title_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_11"
        android:text="@string/forgot_pasw"
        android:textColor="@color/black_000"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@mipmap/wang_ji_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/_86"
            android:textColor="@color/blue_05c"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/forgot_pasw_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@null" />
    </LinearLayout>

    <Button
        android:id="@+id/forgot_pasw_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_91"
        android:background="@mipmap/wang_ji_btn_bg"
        android:text="@string/next"
        android:textColor="@color/white_fff"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

</LinearLayout>