<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.fragment.NewHomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_370"
                android:background="@mipmap/new_home_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_31">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:text="@string/new_home_kuang_chang"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:id="@+id/new_home_all_cc_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wan"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_home_now_user"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />

                        <TextView
                            android:id="@+id/new_home_now_user_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="754"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_13"
                            android:text="@string/ren"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:text="@string/new_home_jin_du"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:id="@+id/new_home_now_jin_du_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bai_fen_hao"
                        android:textColor="@color/white_fff"
                        android:textSize="@dimen/sp_9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_home_feng_li"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />

                        <TextView
                            android:id="@+id/new_home_now_feng_su_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_13"
                            android:text="10"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />
                    </LinearLayout>
                </LinearLayout>

                <com.coinwind.bifeng.view.ClosedCCView
                    android:id="@+id/new_home_closed_cc_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--矿产记录-->
                    <LinearLayout
                        android:id="@+id/new_home_kuang_chan_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/new_home_zi_chan_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="@string/new_home_ji_lu"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />
                    </LinearLayout>
                    <!--提升风力-->
                    <LinearLayout
                        android:id="@+id/new_home_suan_li_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_33"
                        android:layout_toRightOf="@id/new_home_kuang_chan_btn"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/new_home_feng_li_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="@string/new_home_up_fneg_li"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/new_home_yao_qing_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_24"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/new_home_yao_qing_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="@string/new_home_yao_qing"
                            android:textColor="@color/white_fff"
                            android:textSize="@dimen/sp_9" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!--广播列表-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_9"
                    android:src="@mipmap/guangbo" />

                <com.coinwind.bifeng.view.homeview.MarqueeTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/white_fff"
                    android:ellipsize="marquee"
                    android:fillViewport="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/home_guang_bo_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_fff"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="我是跑马灯、我是跑马灯、我是跑马灯"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_193"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/new_my_task_bg"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/new_home_do_recommended_task_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_59">

                        <TextView
                            android:id="@+id/new_home_do_recommended_task_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black_333"
                            android:textSize="@dimen/sp_28" />

                        <TextView
                            android:id="@+id/new_home_do_recommended_task_all_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/10"
                            android:textColor="@color/black_333"
                            android:textSize="@dimen/sp_28" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_my_yue_deng_yu"
                            android:textColor="@color/black_333"
                            android:textSize="@dimen/sp_28" />

                        <TextView
                            android:id="@+id/new_home_ren_min_bi_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_65"
                            android:text="34"
                            android:textColor="@color/black_333"
                            android:textSize="@dimen/sp_28" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:text="@string/new_home_today"
                        android:textColor="@color/black_333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_50"
                        android:gravity="right"
                        android:text="@string/new_home_zong_liang"
                        android:textColor="@color/black_333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <Button
                    android:id="@+id/new_home_do_task_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:layout_marginLeft="@dimen/dp_68"
                    android:layout_marginRight="@dimen/dp_68"
                    android:layout_marginTop="@dimen/dp_32"
                    android:background="@mipmap/new_home_do_task_btn_bg"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <include layout="@layout/net_work_error_layout" />
</LinearLayout>