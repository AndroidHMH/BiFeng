<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_de"
    android:orientation="vertical"
    tools:context=".ui.setting.activity.ChangePaswActivity">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_de" />
    <!--账号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/change_pasw_user_name"
            android:textColor="@color/black_555"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <TextView
                android:id="@+id/change_psw_user_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="17611281321"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/change_psw_send_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_9"
                android:gravity="center_vertical"
                android:text="@string/login_get_code"
                android:textColor="@color/orange_f9f0"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_de" />
    <!--验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/change_pasw_code"
            android:textColor="@color/black_555"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/change_psw_psw_et"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="7"
            android:background="@null"
            android:hint="@string/change_psw_code"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_de" />
    <!--新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/change_psw_new_psw"
            android:textColor="@color/black_555"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <EditText
                android:id="@+id/change_psw_new_psw_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="7"
                android:background="@null"
                android:hint="@string/change_psw_new_pasww"
                android:inputType="textPassword"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/change_psw_can_see_btn"
                android:layout_width="@dimen/dp_29"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_20"
                android:paddingRight="@dimen/dp_9"
                android:paddingTop="@dimen/dp_20"
                android:src="@mipmap/no_can_see" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/change_psw_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_75"
        android:background="@color/orange_f9f0"
        android:text="@string/qie_ding"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />
    <include layout="@layout/net_work_error_layout"/>
</LinearLayout>