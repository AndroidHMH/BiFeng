<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.bindphonenumber.activity.SendBindPhoneNimberActivity">

    <TextView
        android:id="@+id/send_bing_phone_number_return_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_33"
        android:text="@string/shang_yi_bu"
        android:textColor="@color/blue_05c"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center_horizontal"
        android:text="验证码"
        android:textColor="@color/black_000"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用"
            android:textColor="@color/black_000"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/send_bing_phone_number_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXXX"
            android:textColor="@color/blue_05c"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码绑定"
            android:textColor="@color/black_000"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
    <!--验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@mipmap/change_psw_code_bg"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/send_bing_phone_number_code_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/send_bing_phone_number_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_17"
            android:paddingRight="@dimen/dp_20"
            android:text="发送验证码"
            android:textColor="@color/blue_05c"
            android:textSize="@dimen/sp_15" />


    </LinearLayout>
    <!--新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@mipmap/change_psw_psw_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <EditText
                android:id="@+id/send_bing_phone_number_pasw_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/change_psw_new_pasww"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/send_bing_phone_number_can_see_btn"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_15"
                android:paddingRight="@dimen/dp_17"
                android:paddingTop="@dimen/dp_13"
                android:src="@mipmap/no_can_see" />
        </LinearLayout>

    </LinearLayout> <!--新密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@mipmap/change_psw_psw_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <EditText
                android:id="@+id/send_bing_phone_number_yaop_qing_code_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/yao_qing_ma"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/send_bing_phone_number_send_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/home_jing_pin_shape"
        android:text="@string/wan_cheng"
        android:textColor="@color/white_fff"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <include layout="@layout/net_work_error_layout" />
</LinearLayout>