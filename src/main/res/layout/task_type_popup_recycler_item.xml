<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/task_type_popup_recycler_item_type_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/task_type_popup_recycler_item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_12"
        android:text="转发任务"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/sp_12" />

    <View
        android:id="@+id/task_type_popup_recycler_item_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginLeft="@dimen/dp_13"
        android:background="@color/gray_e9" />
</LinearLayout>
