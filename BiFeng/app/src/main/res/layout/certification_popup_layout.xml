<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/certification_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_26"
            android:gravity="right">

            <ImageView
                android:id="@+id/certification_popup_qu_xiao_btn"
                android:layout_width="@dimen/dp_26"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:src="@mipmap/quxiao" />
        </LinearLayout>

        <!--产品名称-->
        <EditText
            android:id="@+id/certification_popup_chan_pin_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/certification_et_shape"
            android:gravity="center_vertical"
            android:hint="@string/certification_chan_pin"
            android:paddingLeft="@dimen/dp_6"
            android:textSize="@dimen/sp_12" />
        <!--上传logo-->
        <LinearLayout
            android:id="@+id/certification_popup_logo_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/certification_et_shape"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/updata_logo"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/certification_popup_logo_img"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/add_logo" />
        </LinearLayout>
        <!--上传名片-->
        <LinearLayout
            android:id="@+id/certification_popup_ming_pian_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/certification_et_shape"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/updata_ming_pian"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/certification_popup_ming_pian_img"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/add_logo" />
        </LinearLayout>
        <!--选择雇主类型-->
        <LinearLayout
            android:id="@+id/certification_popup_type_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/certification_et_shape"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/choose_gu_zhu_type"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/certification_popup_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/jin_ru" />
        </LinearLayout>

        <!--企业介绍-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_96"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/certification_et_shape">

            <EditText
                android:id="@+id/certification_popup_jie_shao_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4_5"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@null"
                android:hint="@string/qi_ye_jie_shao_hint"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/certification_popup_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/certification_et_shape"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_7"
            android:paddingTop="@dimen/dp_7"
            android:text="@string/submit_2"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


</LinearLayout>
