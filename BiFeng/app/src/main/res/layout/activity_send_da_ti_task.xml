<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sendtask.activity.SendDaTiTaskActivity">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:id="@+id/send_da_ti_task_psswnum_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:text="@string/send_da_ti_task_psw_num_tv"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/send_da_ti_task_psswnum_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:text="1道题"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.coinwind.bifeng.view.SendDaTiView
                android:id="@+id/send_da_ti_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <include layout="@layout/send_task_add_wen_ti" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/send_diao_yan_task_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/orange_f9f0"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_task_tv"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <include layout="@layout/net_work_error_layout" />
</LinearLayout>