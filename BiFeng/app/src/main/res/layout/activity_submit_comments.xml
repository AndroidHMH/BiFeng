<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    tools:context=".ui.submittask.activity.SubmitCommentsActivity">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:id="@+id/submit_comments_all_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/photo_count"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jiang_li"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/submit_comments_shuo_ming_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_m_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/task_description"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/submit_comments_description_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="@string/phone_hint"
                android:maxLength="200"
                android:paddingLeft="@dimen/dp_7"
                android:paddingRight="@dimen/dp_7"
                android:paddingTop="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                android:visibility="visible" />

            <EditText
                android:id="@+id/submit_comments_phone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="@string/phone_hint"
                android:inputType="number"
                android:maxLength="200"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_7"
                android:paddingRight="@dimen/dp_7"
                android:paddingTop="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/submit_comments_shu_cu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_lenght"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/submit_comments_text_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="@string/text"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <include layout="@layout/submit_img_layout" />
        </LinearLayout>

        <TextView
            android:id="@+id/submit_comments_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/orange_f9f0"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <include layout="@layout/net_work_error_layout" />
</LinearLayout>