<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.answertask.activity.AnswerTaskActivity">

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/answer_task_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/answer_task_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="EOS 超级节点网站注册"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/jinbi" />

                <TextView
                    android:id="@+id/answer_task_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="1500CSS"
                    android:textColor="@color/orange_f9f0"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/次"
                    android:textColor="@color/orange_f9f0"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/answer_task_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="张三三	刚刚完成了任务"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/answer_task_huisuo_img"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/huisuo" />

                <TextView
                    android:id="@+id/answer_task_hui_suo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/answer_task_huisuo_img"
                    android:text="币风交易所"
                    android:textColor="@color/gray_666"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/answer_task_type_img"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_230"
                    android:layout_toRightOf="@id/answer_task_huisuo_img"
                    android:src="@mipmap/answer_type" />

                <TextView
                    android:id="@+id/answer_task_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/answer_task_type_img"
                    android:text="答题任务"
                    android:textColor="@color/gray_666"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/answer_task_shengyu_img"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/shengyu" />

                <TextView
                    android:id="@+id/answer_task_shengyu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/answer_task_shengyu_img"
                    android:text="剩余132次"
                    android:textColor="@color/gray_666"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/answer_task_time_img"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_230"
                    android:layout_toRightOf="@id/answer_task_shengyu_img"
                    android:src="@mipmap/shijian" />

                <TextView
                    android:id="@+id/answer_task_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/answer_task_time_img"
                    android:text="2018:19:34"
                    android:textColor="@color/gray_666"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/rectangle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/task_jianjie"
                    android:textColor="@color/black_f333"
                    android:textSize="@dimen/sp_9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20">

                <TextView
                    android:id="@+id/answer_task_ren_wu_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/guzhuline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/task_gu_zhu"
                    android:textColor="@color/black_f333"
                    android:textSize="@dimen/sp_9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20">

                <TextView
                    android:id="@+id/answer_task_gu_zhu_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，希望大家都能认真对待。这个任务很简单，"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_9" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <LinearLayout
            android:id="@+id/answer_task_fen_xiang_btn"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange_fb53"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fenxiang_start"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/answer_task_zheng_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foot_end"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer_task_ren_wu_btn"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange_f9"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renwu_start"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/answer_task_ren_wu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foot_end"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>