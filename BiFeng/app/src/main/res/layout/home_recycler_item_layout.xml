<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_88">

    <RelativeLayout
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/home_recycler_item_layout_img"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75" />

        <ImageView
            android:id="@+id/home_recycler_item_layout_biao_qian_img"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_recycler_item_layout_xcf_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_recycler_item_layout_zhi_diong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_3_5"
                    android:background="@drawable/home_zhi_ding_shape"
                    android:paddingBottom="@dimen/dp_1_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_0_5"
                    android:text="置顶"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/home_recycler_item_layout_jing_pin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_3_5"
                    android:background="@drawable/home_jing_pin_shape"
                    android:paddingBottom="@dimen/dp_1_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_0_5"
                    android:text="精品"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <TextView
                android:id="@+id/home_recycler_item_layout_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_18"
                android:maxLines="1"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/home_recycler_item_layout_xcf_title_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:container_background_color="#FAFAFA"
                    app:container_border_color="@color/white"
                    app:container_border_radius="@dimen/dp_0"
                    app:container_border_width="@dimen/dp_0"
                    app:tag_border_width="@dimen/dp_0_5"
                    app:tag_corner_radius="@dimen/dp_3"
                    app:tag_horizontal_padding="@dimen/dp_8"
                    app:tag_text_size="@dimen/sp_9"
                    app:tag_vertical_padding="@dimen/dp_2_5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_6">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_4"
                        android:background="@color/gray_999"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="@string/remaining"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/home_recycler_item_layout_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="176"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_ci"
                        android:textColor="@color/gray_999"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/home_btn_shape"
                android:gravity="center"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/home_recycler_item_layout_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_score_ci"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
